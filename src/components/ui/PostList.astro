---
import List, { type ItemProps } from "./List.astro";
import type { Posts } from "@lib/directus/queries";

export interface Props {
  posts: Posts;
  grid?: number;
  vertical?: boolean;
  class?: string;
  imageKey?: "large-thumbnail" | "medium-thumbnail-inside" | "small-thumbnail";
}

const {
  posts,
  grid,
  vertical = true,
  class: className = "",
  imageKey = "large-thumbnail",
} = Astro.props;

const items = posts.map(
  (post) =>
    ({
      key: post.slug,
      href: `/news/${post.slug}`,
      label: post.title,
      subtitle: new Date(post.date).toDateString(),
      image: post.image,
    }) as ItemProps,
);
---

<List
  items={items}
  grid={grid}
  imageKey={imageKey}
  vertical={vertical}
  class={className}
/>

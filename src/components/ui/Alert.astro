---
import { CircleAlert } from "@lucide/astro";

export interface Props {
  errors: string[];
}

const { errors = [] } = Astro.props;
---

<div class="bg-red-700 text-white p-4 mb-3 max-w-fit flex items-center gap-2">
  <CircleAlert />
  <ul>
    {errors.map((error) => <li>{error}</li>)}
  </ul>
</div>
